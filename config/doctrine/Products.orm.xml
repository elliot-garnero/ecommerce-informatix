<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="App\Entity\Products" table="products">
    <unique-constraints>
      <unique-constraint name="name" columns="name"/>
    </unique-constraints>
    <id name="idProduct" type="integer" column="id_product">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="idCat" type="integer" column="id_cat" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="name" type="string" column="name" length="255" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="description" type="string" column="description" length="1500" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="brand" type="string" column="brand" length="255" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="stock" type="integer" column="stock" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="price" type="decimal" column="price" precision="10" scale="0" nullable="false"/>
    <field name="promo" type="integer" column="promo" nullable="true">
      <options>
        <option name="unsigned"/>
        <option name="default">NULL</option>
      </options>
    </field>
    <field name="new" type="boolean" column="new" nullable="true">
      <options>
        <option name="default">NULL</option>
      </options>
    </field>
    <field name="picture1" type="string" column="picture1" length="255" nullable="true">
      <options>
        <option name="fixed"/>
        <option name="default">NULL</option>
      </options>
    </field>
    <field name="picture2" type="string" column="picture2" length="255" nullable="true">
      <options>
        <option name="fixed"/>
        <option name="default">NULL</option>
      </options>
    </field>
    <field name="picture3" type="string" column="picture3" length="255" nullable="true">
      <options>
        <option name="fixed"/>
        <option name="default">NULL</option>
      </options>
    </field>
    <field name="characteristics" type="string" column="characteristics" length="1000" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="weight" type="integer" column="weight" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="color" type="string" column="color" length="255" nullable="true">
      <options>
        <option name="fixed"/>
        <option name="default">NULL</option>
      </options>
    </field>
    <field name="size" type="string" column="size" length="255" nullable="true">
      <options>
        <option name="fixed"/>
        <option name="default">NULL</option>
      </options>
    </field>
    <field name="addeddate" type="date" column="addedDate" nullable="false">
      <options>
        <option name="default">current_timestamp()</option>
      </options>
    </field>
  </entity>
</doctrine-mapping>
